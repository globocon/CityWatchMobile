<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C4iSytemsMobApp.MainPage">

    <AbsoluteLayout>

        <StackLayout Padding="10,0,0,0">
            <!-- Adds Left Padding -->
            <Frame 
       Padding="5,5,5,5"
       CornerRadius="10"
       HasShadow="True"
       HeightRequest="35" 
       WidthRequest="650"          
       HorizontalOptions="Center">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#FFFFFF" Offset="0.0"/>
                        <GradientStop Color="#F0F0F0" Offset="1.0"/>
                    </LinearGradientBrush>
                </Frame.Background>
                <StackLayout Spacing="2">
                    <Label x:Name="lblClientSite"
           Text="Client Site: N/A"
           FontSize="12"
           TextColor="Black"
           FontAttributes="Bold"/>
                </StackLayout>
            </Frame>
        </StackLayout>


        <!-- Main Content Grid -->
        <Grid RowDefinitions="Auto,*,Auto,*,Auto" ColumnDefinitions="*,*"
              Padding="5,0,5,10" RowSpacing="2" ColumnSpacing="2"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">

            <!-- Hamburger Menu -->

            <StackLayout Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="End">
                <ImageButton 
                    Source="hamburger.png" 
                    WidthRequest="40" 
                    HeightRequest="40"
                    BackgroundColor="Transparent" 
                    Clicked="OnMenuClicked" />
            </StackLayout>

            <!-- Incident Report Button -->
            <Frame Grid.Row="1" Grid.Column="0"
                   CornerRadius="15"
                   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                   Padding="5" HasShadow="True">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#007AFF" Offset="0.0"/>
                        <GradientStop Color="#0056B3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Frame.Background>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnManualPositionClicked"/>
                </Frame.GestureRecognizers>
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="3">
                    <Image Source="card_checklist.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Incident Report" TextColor="White" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Log Activity Button -->
            <Frame Grid.Row="1" Grid.Column="1"
                   CornerRadius="15"
                   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
                   Padding="5" HasShadow="True">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#007AFF" Offset="0.0"/>
                        <GradientStop Color="#0056B3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Frame.Background>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLogActivityClicked"/>
                </Frame.GestureRecognizers>
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="3">
                    <Image Source="chat_text.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Log Activity" TextColor="White" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Duress Button -->
            <Frame x:Name="DuressButtonFrame"
                   Grid.Row="2" Grid.ColumnSpan="2"
                   BackgroundColor="#FFC107"
                   CornerRadius="150"
                   WidthRequest="300" HeightRequest="300"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDuressClicked"/>
                </Frame.GestureRecognizers>
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="3">
                    <Label Text="DURESS" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                    <Label x:Name="DuressStatusLabel" Text="Status: Normal" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Audio Button -->
            <Frame Grid.Row="3" Grid.Column="0"
               CornerRadius="15"
               HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
               Padding="5" HasShadow="True">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#007AFF" Offset="0.0"/>
                        <GradientStop Color="#0056B3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Frame.Background>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAudioClicked"/>
                </Frame.GestureRecognizers>
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="3">
                    <Image Source="mic_fill.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Audio" TextColor="White" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Multimedia Button -->
            <Frame Grid.Row="3" Grid.Column="1"
               CornerRadius="15"
               HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"
               Padding="5" HasShadow="True">
                <Frame.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#007AFF" Offset="0.0"/>
                        <GradientStop Color="#0056B3" Offset="1.0"/>
                    </LinearGradientBrush>
                </Frame.Background>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMultimediaClicked"/>
                </Frame.GestureRecognizers>
                <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="3">
                    <Image Source="camera_fill.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Multimedia" TextColor="White" FontSize="12" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </Frame>

            <!-- Footer Image -->
            <Image Grid.Row="4" Grid.ColumnSpan="2"
               Source="c4ilogo.jpg"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="End"
               HeightRequest="50"
               Aspect="AspectFit"/>

        </Grid>

        <!-- Popup for Countdown -->
        <Grid x:Name="DuressPopup"
              BackgroundColor="#80000000"
              IsVisible="False"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All">
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Padding="20">
                <StackLayout>
                    <Label x:Name="CountdownLabel"
       Text="Activating duress in 5 seconds"
       FontSize="18"
       HorizontalTextAlignment="Center"
       TextColor="Black"/>
                    <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="Red" TextColor="White" Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>
        </Grid>

    </AbsoluteLayout>

</ContentPage>

