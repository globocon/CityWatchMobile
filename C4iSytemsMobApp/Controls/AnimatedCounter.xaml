<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C4iSytemsMobApp.Controls.AnimatedCounter"
             x:Name="AnimatedCounterControl">
    <Frame BackgroundColor="Black"
           BorderColor="Gray"
           Padding="5"
           WidthRequest="120"
           HeightRequest="60"
           CornerRadius="5">
        <Grid>
            <Label x:Name="DigitLabel"
                   Text="00000"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>
    </Frame>
</ContentView>
