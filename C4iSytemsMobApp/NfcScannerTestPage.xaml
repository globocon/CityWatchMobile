        <Label Text="Scan a NFC Tag" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <VerticalStackLayout Padding="10" Spacing="10">

            <Button Text="Start NFC Scanner" Clicked="OnStartNfcScannerClicked" />

            <Label x:Name="txtnfcTagID" 
                    Text="" 
                    FontSize="14"
                    FontAttributes="Bold"           
                    Padding="10,5,0,5" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" />
        </VerticalStackLayout>


    </VerticalStackLayout>
</ContentPage>
