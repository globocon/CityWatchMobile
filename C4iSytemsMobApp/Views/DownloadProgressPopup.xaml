<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C4iSytemsMobApp.Views.DownloadProgressPopup"
             Title="C4i Systems Download Progress"
             BackgroundColor="#80000000"
             Padding="30">

    <VerticalStackLayout BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
                         Padding="20"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         WidthRequest="280"
                         Spacing="15">

        <Label Text="Downloading C4i System update..."
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=Black, Dark=White}" />

        <ProgressBar x:Name="ProgressBarDownload"
                     Progress="0"
                     HeightRequest="10" />

        <Label x:Name="LblPercent"
               Text="0%"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
    </VerticalStackLayout>
</ContentPage>    
