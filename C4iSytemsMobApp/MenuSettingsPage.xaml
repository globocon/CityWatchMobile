<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C4iSytemsMobApp.MenuSettingsPage"
             Title="Settings">

    <ScrollView>

        <VerticalStackLayout Spacing="20"
                             Padding="10">

            <!-- Row with Back (left) and Home (right) -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="Auto,*,Auto"
                  VerticalOptions="Center"
                  Padding="0,5">

                <!-- Back Button -->
                <Button Text="â† Back"
                        Clicked="OnBackClicked"
                        BackgroundColor="Transparent"
                        TextColor="Blue"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Grid.Column="0" />

                <!-- Title Label -->
                <Label Text="Settings"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="1"
                       TextColor="Black" />

                <!-- Home Button -->
                <ImageButton Source="home.png"
                             Clicked="OnHomeClicked"
                             HeightRequest="30"
                             WidthRequest="30"
                             BackgroundColor="Transparent"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Grid.Column="2" />
            </Grid>




            <!-- Main Buttons -->
            <VerticalStackLayout Padding="5"
                                 Spacing="15">

                <Button Text="Check for Updates..."
                        Clicked="OnCheckForUpdatesClicked"
                        FontAttributes="Bold" />

                <Button Text="Add Tags"
                        Clicked="OnAddTagsClicked"
                        FontAttributes="Bold" />

                <Frame CornerRadius="9"
                       HasShadow="False"
                       BorderColor="Transparent"
                       Margin="0,0,0,0"
                       Padding="0"
                       HeightRequest="46"
                       HorizontalOptions="Fill"
                       VerticalOptions="Center"
                       BackgroundColor="{AppThemeBinding Light=#512bd4, Dark=#ac99ea}">

                    <HorizontalStackLayout Padding="15,0"
                                           Spacing="10"
                                           VerticalOptions="Center"
                                           HorizontalOptions="FillAndExpand"
                                           HeightRequest="46">

                        <Label Text="Dark Mode"
                               FontSize="13"
                               VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand"
                               TextColor="{AppThemeBinding Light=White, Dark=Black}" />

                        <Switch x:Name="ThemeSwitch"
                                VerticalOptions="Center"
                                Toggled="OnThemeSwitchToggled"
                                OnColor="White"
                                ThumbColor="Gray"
                                Scale="0.9" />

                        <Label x:Name="ThemeStateLabel"
                               Text="On"
                               FontSize="13"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               TextColor="{AppThemeBinding Light=White, Dark=Black}" />
                    </HorizontalStackLayout>
                </Frame>

                <Button Text="Select Smart Wand"
                        Clicked="OnSelectSmartWandClicked"
                        FontAttributes="Bold" />

                <Button Text="About C4i System"
                        Clicked="OnAboutC4iClicked"
                        FontAttributes="Bold" />

            </VerticalStackLayout>


        </VerticalStackLayout>

    </ScrollView>
</ContentPage>


