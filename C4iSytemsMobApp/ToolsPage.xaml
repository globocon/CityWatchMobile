<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C4iSytemsMobApp.ToolsPage"
             Title="ToolsPage">
    <VerticalStackLayout Padding="20" Spacing="10">

        <!-- Title -->
        <Label x:Name="TitleLabel"
           Text="Staff Tools"
           FontSize="24"
           FontAttributes="Bold"
           HorizontalOptions="Center" />

        <!-- Row with Back (left) and Home (right) -->
        <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
            <!-- Back Button -->
            <Button Text="â† Back"
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="Blue"
                FontAttributes="Bold"
                HorizontalOptions="Start"
                Grid.Column="0" />

            <!-- Spacer -->
            <BoxView WidthRequest="0" Grid.Column="1" />

            <!-- Home Button -->
            <ImageButton Source="home.png"
                     Clicked="OnHomeClicked"
                     HeightRequest="30"
                     WidthRequest="30"
                     BackgroundColor="Transparent"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     Grid.Column="2" />
        </Grid>

        <!-- Tools List -->
        <CollectionView ItemsSource="{Binding StaffTools}"
                    Margin="10"
                    VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Frame HasShadow="False"
                           BackgroundColor="#f0f0f0"
                           CornerRadius="8"
                           Padding="10"
                           Margin="0,5,0,5">

                            <Grid ColumnDefinitions="*,Auto"
                              ColumnSpacing="10"
                              VerticalOptions="Center">

                                <!-- Tool Title and Hyperlink -->
                                <VerticalStackLayout Grid.Column="0"
                                                 Spacing="4"
                                                 VerticalOptions="Center">
                                    <Label Text="{Binding Title}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="DarkSlateGray"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2" />

                                  
                                </VerticalStackLayout>

                                <!-- Open Link Icon -->
                                <ImageButton Source="blueglobeicon.png"
             CommandParameter="{Binding Hyperlink}"
             Clicked="OnHyperlinkIconClicked"
             BackgroundColor="Transparent"
             WidthRequest="15"
             HeightRequest="15"
             Padding="0"
             Aspect="AspectFit"
             Grid.Column="1"
             VerticalOptions="Center"
             HorizontalOptions="End" />
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>


</ContentPage>