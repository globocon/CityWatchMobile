<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:C4iSytemsMobApp"
             x:Class="C4iSytemsMobApp.iBeaconScannerPage"
             Title="Custom Logs">

    <Grid RowDefinitions="Auto, Auto, *"
          Padding="20"
          BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=Black}">

        <!-- Buttons -->
        <VerticalStackLayout Grid.Row="0"
                             Spacing="15"
                             Padding="30"
                             VerticalOptions="FillAndExpand">
            <Button Text="Start Scanning"
                    Clicked="OnStartScanClicked" />

            <Button Text="Stop Scanning"
                    Clicked="OnStopScanClicked" />

            <Button Text="Clear Logs List"
                    Clicked="OnClearLogsClicked" />

        </VerticalStackLayout>

        <!-- Replaces ScrollView + Label with high-performance list -->
        <CollectionView x:Name="bleList"
                        Grid.Row="2"
                        VerticalOptions="FillAndExpand"
                        ItemsSource="{Binding BleLogs}"
                        BackgroundColor="{AppThemeBinding Light=#F2F2F2, Dark=Black}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           FontSize="14"
                           Margin="5,2" />
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>    
</ContentPage>
